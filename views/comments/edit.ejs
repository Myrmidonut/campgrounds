<% include ../partials/header %>

<div class="container">
  <h1 class="container-heading">Edit Comment</h1>

  <div class="container-form">

    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="Comment">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-l btn-primary btn-block" value="Submit!">
      </div>
    </form>

    <a href="/campgrounds/<%= campground_id %>">Go back</a>
  </div>
</div>

<% include ../partials/footer %>